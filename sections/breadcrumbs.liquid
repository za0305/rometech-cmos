                </a>  
            </li>

            {% if template contains 'page' %}
                <li class="breadcrumbs__item">&nbsp;
                    <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                        <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>&nbsp;
                    {{ page.title | capitalize }}
                </li>
            {% elsif template contains 'product' %}
                {%- if collection -%}
                    <li class="breadcrumbs__item">&nbsp;
                        <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                            <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>&nbsp;
                        {{ collection.title | link_to: collection.url, class: 'breadcrumbs__link' }}
                    </li>
                {%- endif -%}
                <li class="breadcrumbs__item">&nbsp;
                    <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                        <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>&nbsp;
                    {{ product.title }}
                </li>
    
            {% elsif template contains 'collection' and collection.handle %}
                {%- assign parrent_collection = collection.metafields.custom.parent_collection -%}
                {%- if parrent_collection != blank -%}
                    <li class="breadcrumbs__item">&nbsp;
                        <a href="{{ parrent_collection.value.url }}" class="breadcrumbs__link" title="{{ parrent_collection.value.title }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                                <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>&nbsp;
                            {{ parrent_collection.value.title }}
                        </a>
                    </li>
                {%- endif -%}

                <li class="breadcrumbs__item">&nbsp;
                    <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                        <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>&nbsp;
                    {{ collection.title }}
                </li>
        
            {% elsif template == 'blog' %}
                <li class="breadcrumbs__item">&nbsp;
                    <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                        <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>&nbsp;
                    {{ blog.title }}
                </li>
        
            {% elsif template == 'article' %}
                {%- if blog -%}
                    <li class="breadcrumbs__item">&nbsp;
                        <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                            <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>&nbsp;
                        {{ blog.title | link_to: blog.url, class: 'breadcrumbs__link' }}
                    </li>
                {%- endif -%}
                <li class="breadcrumbs__item">&nbsp;
                    <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                        <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>&nbsp;
                    {{ article.title }}
                </li>
        
            {% else %}
                <li class="breadcrumbs__item">&nbsp;
                    <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none">
                        <path d="M1.1998 8.59961L4.79981 4.99961L1.1998 1.39961" stroke="#333333" stroke-opacity="0.65" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>&nbsp;
                    {{ page_title }}
                </li>
        
            {% endif %}
        </ul>
    </nav> 
{%- endunless -%}

{% schema %}
{
    "name": "Breadcrumbs",
    "class": "section-breadcrumbs",
    "enabled_on": {
        "groups": ["header"]
    },
    "settings": [
        {
            "type": "checkbox",
            "id": "breadcrumbs_in_homepage",
            "default": false,
            "label": "Show Breadcrumbs in homepage"
        }
    ],
    "presets": [
        {
            "name": "Breadcrumbs"
        }
    ]
}
{% endschema %}