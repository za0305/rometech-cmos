{%- unless template.name == 'index' -%}
    <style>
        .section-breadcrumbs {
            position: relative;
            top: 30px;
        }
        .breadcrumbs__list {
            margin: 1.5rem 0;
            padding: 0 1.5rem;
            display: flex;
            list-style: none;
        }
        .breadcrumbs__link {
            text-decoration: none;
            color: #333;
        }
        .breadcrumbs__link-home svg {
            position: relative;
            top: 3px;
        }
        @media screen and (min-width: 750px) {
            .section-breadcrumbs {
                position: relative;
                top: 60px;
            }
        }
    </style>

